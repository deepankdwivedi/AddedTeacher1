<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <TextView
        android:visibility="gone"
        android:id="@+id/tvNotes"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes Sharing" />

    <Button
        android:id="@+id/bSnap"
        android:text="Snap a Pic"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Choose Image"
        android:textColor="#000"
        android:id="@+id/bChoose"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bSnap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/ivSnap"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bChoose"
        android:layout_width="250dp"
        android:layout_height="250dp" />

    <Button
        android:textColor="#000"
        android:text="Upload"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivSnap"
        android:id="@+id/bUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:layout_marginLeft="50dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:id="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/bSnap" />

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
